<Window x:Class="Fastly_Image_Viewer.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:c="clr-namespace:Fastly_Image_Viewer.Controls"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fastly_Image_Viewer"
        mc:Ignorable="d"
        Title="SettingsWindow"
        WindowStyle="None"
        Width="300" Height="450"
        Topmost="True"
        AllowsTransparency="True"
        Background="#7F000000">
    <Grid>
        <Border
            BorderBrush="#BF191919"
            BorderThickness="1"/>
        <Rectangle
            x:Name="titleRect"
            Fill="#BF191919"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Width="300" Height="24"/>
        <Label
            x:Name="titleLbl"
            Foreground="Gray"
            Width="300" Height="24"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Padding="10, 5"
            FontSize="10"
            Content="Settings"/>
        <CheckBox
            x:Name="autoRunCheckBox"
            Style="{StaticResource NativeCheckBoxStyle}"
            Foreground="Gray"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Margin="30, 54"
            FontSize="10"
            Content="Autorun with Windows"/>
        <Button
            x:Name="cancelBtn"
            Style="{StaticResource ButtonStyle}"
            Width="70" Height="30"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Margin="105, 30"
            Content="CANCEL" />
        <Button
            x:Name="applyBtn"
            Style="{StaticResource ButtonStyle}"
            Width="70" Height="30"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Margin="30"
            Content="APPLY" 
            Click="applyBtn_Click"/>
    </Grid>
</Window>
