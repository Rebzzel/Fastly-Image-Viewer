<Window x:Class="Fastly_Image_Viewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fastly_Image_Viewer"
        mc:Ignorable="d"
        Title="MainWindow"
        WindowStyle="None"
        WindowState="Maximized"
        Width="1024" Height="768"
        AllowsTransparency="True"
        Background="#7F000000">
    <Window.Resources>
        <!-- ToolTip Style -->
        <Style TargetType="ToolTip">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToolTip">
                        <Grid>
                            <Border 
                                Background="#7F000000"
                                BorderBrush="#BF191919"
                                BorderThickness="1">
                                <Label
                                    Foreground="#99FFFFFF"
                                    Content="{TemplateBinding Content}"/>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Button
            x:Name="openBtn"
            Style="{StaticResource NativeButtonStyle}"
            Width="60" Height="40"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Margin="30"
            FontSize="16"
            Content="OPEN"/>
        <Grid
            HorizontalAlignment="Right"
            Margin="30">
            <Button 
                x:Name="closeBtn"
                Style="{StaticResource NativeButtonStyle}"
                Width="40" Height="40"
                HorizontalAlignment="Right"
                VerticalAlignment="Top">
                <Path
                    Fill="White"
                    Width="16" Height="16"
                    Data="{StaticResource IconClose}"
                    Stretch="Fill"/>
            </Button>
            <Button 
                x:Name="settingsBtn"
                Style="{StaticResource NativeButtonStyle}"
                Width="40" Height="40"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="0,0,0,45">
                <Path
                    Fill="White"
                    Width="20" Height="20"
                    Data="{StaticResource IconSettings}"
                    Stretch="Fill"/>
            </Button>
            <Button
                x:Name="infoBtn"
                Style="{StaticResource NativeButtonStyle}"
                Width="40" Height="40"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                ToolTip="">
                <Path
                    Fill="White"
                    Width="18" Height="18"
                    Data="{StaticResource IconInfo}"
                    Stretch="Fill"/>
            </Button>
        </Grid>
    </Grid>
</Window>
